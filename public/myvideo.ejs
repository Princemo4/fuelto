<div class="row bg-white">
  <div class="container py-4 h-100">
    <div class="col-lg-12 mb-4">
      <div class="text-center">
        <h3 class="mb-5"><%= full_name %> </h3>
        <h5>Created on:  <%= date_uploaded%> </h5>
        <em>Video will expire on:  <%= expires_on %>  </em>
      </div>

    </div>
    <div class="">
      <div class="d-flex justify-content-center align-items-center ">
        <div class="card shadow p-2">
          <video src="<%= video_signed_url %> " class="video-player" width="100%" height="100%" controls controlsList="nodownload">

          </video>
        </div>

      </div>
    </div>

  </div>
</div>
